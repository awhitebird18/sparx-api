    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.67",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer-mailgun-transport": "^1.4.5",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
